# Environment variables for Live Sports Betting Platform
# Copy this to .env and add your API keys

# OpenAI API Key for live predictions
OPENAI_API_KEY=your_openai_api_key_here

# Sports Data API Keys
ODDS_API_KEY=demo-key
BETS_API_KEY=demo-key

# Application Settings
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8080

# Database (if needed)
DATABASE_URL=sqlite:///./betting_data.db

# Legal Compliance
MANUAL_BETTING_ONLY=true
LEGAL_MODE=enabled